<div id="stories" <%=
	if @vote_id != nil do
		"class=voted"
	end
%>>
	<%= for story <- @stories do %>
		<div id="<%= story.id %>" class="story">
			<h2><a class="story-link" href="/stories-viewer?id=<%= story.id %>"><%= story.title %></a></h2>
			<div class="left-align">
